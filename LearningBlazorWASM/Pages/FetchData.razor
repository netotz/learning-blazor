@page "/fetchdata"

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (Forecasts is null)
{
    <p><em>@LoadingLabel</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (°C)</th>
                <th>Temp. (°F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in Forecasts)
            {
                <tr>
                    <td>@forecast.Date.ToShortDateString()</td>
                    <td>@forecast.CelsiusTemperature</td>
                    <td>@forecast.FahrenheitTemperature</td>
                    <td>@forecast.Summary</td>
                </tr>
            }
        </tbody>
    </table>
}